generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  firstName      String
  lastName       String
  department     String       @default("knowledge")
  role           UserRole     @default(USER)
  profilePicture String?
  joinedAt       DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  skills         String[]     @default([])
  userDetail     UserDetail?
  replies        Replies[]
  discussions    Discussion[]
  password       String?
  refreshToken   String?
}

model UserDetail {
  id          String  @id
  phoneNumber String
  birthPlace  Json?
  address     String?
  socialMedia Json?
  user        User    @relation(fields: [id], references: [id])
}

model Document {
  id          String            @id @default(uuid())
  title       String
  description String
  pages       Int?
  author      String
  uploadedAt  DateTime          @default(now())
  category    String[]
  documentUrl String
  version     DocumentVersion[]
  downloads   Int               @default(0)
  views       Int               @default(0)
}

model DocumentVersion {
  id          String   @id @default(uuid())
  version     Int
  document    Document @relation(fields: [documentId], references: [id])
  documentId  String
  documentUrl String
  createdAt   DateTime @default(now())

  @@unique([documentId, version])
}

model Article {
  id          String   @id @default(uuid())
  title       String
  description String
  author      String
  category    String[]
  views       Int @default(0)
  likes       Int @default(0)
  uploadedAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Discussion {
  id          String    @id @default(uuid())
  title       String
  description String
  authorName  String
  category    String[]
  likes       Int
  replies     Replies[]
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
}

model Replies {
  id           String     @id @default(uuid())
  discussion   Discussion @relation(fields: [discussionId], references: [id])
  discussionId String
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  message      String
}

model Training {
  id         String   @id @default(uuid())
  title      String
  moduleUrl  String
  uploadedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
