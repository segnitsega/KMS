generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum TaskSatus {
  PENDING
  ONPROGRESS
  DONE
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  firstName      String
  lastName       String
  department     String       @default("knowledge")
  role           UserRole     @default(USER)
  profilePicture String?
  joinedAt       DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  skills         String[]     @default([])
  userDetail     UserDetail?  @relation("UserToUserDetail")
  replies        Replies[]    @relation("UserToReplies")
  discussions    Discussion[] @relation("UserToDiscussion")
  password       String?
  refreshToken   String?
  tasks          Task[]       @relation("UserToTask")
}

model UserDetail {
  id          String  @id
  phoneNumber String
  birthPlace  Json?
  address     String?
  socialMedia Json?
  user        User    @relation("UserToUserDetail", fields: [id], references: [id], onDelete: Cascade)
}

model Document {
  id          String            @id @default(uuid())
  title       String
  description String
  pages       Int?
  author      String
  uploadedAt  DateTime          @default(now())
  category    String[]
  documentUrl String
  version     DocumentVersion[] @relation("DocumentToDocumentVersion")
  downloads   Int               @default(0)
  views       Int               @default(0)
}

model DocumentVersion {
  id          String   @id @default(uuid())
  version     Int
  document    Document @relation("DocumentToDocumentVersion", fields: [documentId], references: [id], onDelete: Cascade)
  documentId  String
  documentUrl String
  createdAt   DateTime @default(now())

  @@unique([documentId, version])
}

model Article {
  id          String   @id @default(uuid())
  title       String
  description String
  author      String
  category    String[]
  views       Int      @default(0)
  likes       Int      @default(0)
  uploadedAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Discussion {
  id          String    @id @default(uuid())
  title       String
  description String
  authorName  String
  category    String
  likes       Int       @default(0)
  replies     Replies[] @relation("DiscussionToReplies")
  authorId    String
  author      User      @relation("UserToDiscussion", fields: [authorId], references: [id], onDelete: Cascade)
  uploadedAt  DateTime  @default(now())
}

model Replies {
  id           String     @id @default(uuid())
  discussion   Discussion @relation("DiscussionToReplies", fields: [discussionId], references: [id], onDelete: Cascade)
  discussionId String
  userId       String
  user         User       @relation("UserToReplies", fields: [userId], references: [id], onDelete: Cascade)
  message      String
}

model Training {
  id         String   @id @default(uuid())
  title      String
  moduleUrl  String
  uploadedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Task {
  id            String    @id @default(uuid())
  title         String
  description   String
  taskResource  String
  userId        String
  priorityLevel String
  dueDate       String
  taskStatus    TaskSatus @default(PENDING)
  user          User      @relation("UserToTask", fields: [userId], references: [id], onDelete: Cascade)
}
